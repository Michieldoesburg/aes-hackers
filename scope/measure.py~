from scope import RigolScope
import numpy as np
import matplotlib.pyplot as plt
import time


def main():
    scope = RigolScope('/dev/usbtmc0')

    # Reset scope
    scope.write("*RST")

    # Enable recording
    scope.write(":FUNC:WREC:ENAB 1")

    # Start recording
    scope.write(":FUNC:WREC:OPER RUN")
    time.sleep(1)
    # Stop recording
    scope.write(":FUNC:WREC:OPER STOP")

    
